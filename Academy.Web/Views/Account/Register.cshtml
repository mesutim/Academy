@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Academy.Model.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">مای آکادمی</a></li>
            <li class="breadcrumb-item active" aria-current="page">عضویت در سایت</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        <header><h2> عضویت در سایت </h2></header>

        <div class="form-layer">

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                    <input type="text" asp-for="UserName" class="form-control" placeholder="نام کاربری" aria-describedby="username">
                    <span asp-validation-for="UserName" class="text-danger"></span>

                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="password">
                    <span asp-validation-for="RePassword" class="text-danger"></span>

                </div>


                <div class="link">
                    <a href=""> <i class="zmdi zmdi-assignment"></i> قوانین و مقررات سایت !</a>
                    <a href=""> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>

                <button class="btn btn-success"> عضویت در سایت </button>

            </form>
        </div>

    </div>
</main>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
