@using Academy.Model.Models.IdentityModels
@model Academy.Model.Models.IdentityModels.Role;
@{
    List<Permission> permissions = ViewData["Permission"] as List<Permission>;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- /.col-lg-12 -->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن نقش</h1>
    </div>
</div>
<!-- /.col-lg-12 -->
<div class="row">
    <form method="post">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    نقش جدید
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان نقش</label>
                        <input type="text" asp-for="@Model.RoleTitle" class="form-control" />
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    دسترسی های نقش
                </div>
                <div class="panel-body">
                    <ul>
                        @foreach (var permission in permissions.Where(p => p.ParentID == null))
                        {
                            <li>
                                <input type="checkbox" name="SelectedPermission" value="@permission.PermissionId" /> @permission.PermissionTitle
                                @if (permissions.Any(p => p.ParentID == permission.PermissionId))
                                {
                                    <ul>
                                        @foreach (var sub in permissions.Where(p => p.ParentID == permission.PermissionId))
                                        {
                                            <li>
                                                <input type="checkbox" name="SelectedPermission" value="@sub.PermissionId" /> @sub.PermissionTitle
                                                @if (permissions.Any(p => p.ParentID == sub.PermissionId))
                                                {
                                                    <ul>
                                                        @foreach (var sub2 in permissions.Where(p => p.ParentID == sub.PermissionId))
                                                        {
                                                            <li>
                                                                <input type="checkbox" name="SelectedPermission" value="@sub2.PermissionId" /> @sub2.PermissionTitle
                                                            </li>
                                                        }
                                                    </ul>
                                                }

                                            </li>
                                        }
                                    </ul>
                                }
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>

    </form>
</div>

