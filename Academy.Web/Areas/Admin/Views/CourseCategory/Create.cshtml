@model Academy.Model.Models.CourseModels.Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن گروه جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.ParentId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    گروه جدید
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group col-9">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="@Model.CategoryTitle" class="form-control">
                    </div>

                    <div class="form-group col-3">
                        <label>ترتیب نمایش </label>
                        <input asp-for="@Model.DisplayOrder" class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                    <a class="btn btn-danger" asp asp-action="Index">بازگشت به لیست</a>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>

