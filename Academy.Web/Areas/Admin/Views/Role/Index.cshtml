@model IEnumerable<Academy.Model.Models.IdentityModels.Role>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
</div>
<!-- /.col-lg-12 -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a asp-area="Admin" asp-controller="Role" asp-action="Create" class="btn btn-outline btn-success">افزودن نقش جدید</a>
                        </div>

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان نقش</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.RoleTitle</td>

                                        <td>
                                            <a href="/Admin/Role/Upsert/roleID=@user.RoleId" class="btn btn-warning btn-sm">ویرایش</a>
                                            <a onClick=Delete('/Admin/Role/Delete?roleID=@user.RoleId') class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i>حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section Scripts
    {
    <script>
        function Delete(url) {
            Swal.fire({
                title: 'آیا از حذف نقش مطمئن هستید؟',
                text: "توجه: علملیات حذف قابل بازگردانی نخواهد بود.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'حذف'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                            }
                        }
                    })
                }
            })
        }
    </script>
}