@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Academy.Model.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">مای آکادمی</a></li>
            <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p> ورود شما با موفقیت انجام شد. </p>
            </div>
            <script>
                var delay = 2000;
                setTimeout(function () { window.location = "https://localhost:44398/" }, delay)
            </script>
        }
        @if (ViewBag.EditProfile != null)
        {
            <div class="alert alert-warning">
                <p> به دلیل ویرایش اطلاعات حساب کاربری لطف مجدد لاگین فرمائید. </p>
            </div>

        }

        <header>
            <h2> ورود به سایت </h2>
        </header>

        <div class="form-layer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="Login" method="post" asp-antiforgery="true">
                <span class="text-danger" asp-validation-for="Email"></span>
                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="text" asp-for="Email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>

                <span class="text-danger" asp-validation-for="Password"></span>
                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>


